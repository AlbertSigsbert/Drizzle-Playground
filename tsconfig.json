{
  "compilerOptions": {
    "rootDir": "src",
    "target": "esnext",
    "module": "esnext",               // just standard ES modules
    "moduleResolution": "node",       // simple node resolution
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": false,             // no builds, so no need
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
